@model DCMS.ViewModel.Models.Visit.LineTierModel

<input asp-for="Id" type="hidden" />
<input asp-for="StoreId" type="hidden" />

<div class="form-group">
    <lable class="col-lg-3 control-label">
        名称
        <i class="fa fa-exclamation-circle text-warning fa-lg" data-placement="top" data-toggle="tooltip" title="" data-original-title="线路类别名称"></i>
    </lable>
    <div class="col-lg-8">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="form-group">
    <lable class="col-lg-3 control-label">
        备注
        <i class="fa fa-exclamation-circle text-warning fa-lg" data-placement="top" data-toggle="tooltip" title="" data-original-title="备注"></i>
    </lable>
    <div class="col-lg-8">
        @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="form-group">
    <lable class="col-lg-3 control-label">
        状态
        <i class="fa fa-exclamation-circle text-warning fa-lg" data-placement="top" data-toggle="tooltip" title="" data-original-title="状态（正常/停用）"></i>
    </lable>
    <div class="col-lg-8">
        @Html.CheckBoxFor(model => model.Enabled, new { @class = "mt15" })
    </div>
</div>