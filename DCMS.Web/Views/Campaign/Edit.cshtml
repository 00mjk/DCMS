@using DCMS.Web.Extensions;
@using DCMS.Web.Framework.UI;
@using DCMS.ViewModel.Models.Campaigns;

@model CampaignModel

<section id="content_wrapper">
    <!-- Start: Topbar-Dropdown -->
    <div id="topbar-dropmenu">
        @await Html.PartialAsync("_ToolBox")
    </div>
    <!-- End: Topbar-Dropdown -->
    <!-- Start: Topbar -->
    <header id="topbar">
        <div class="topbar-left">
            <ol class="breadcrumb">
                <li class="crumb-active">
                    <a href="#">档案管理</a>
                </li>
                <li class="crumb-icon">
                    <a href="@Url.RouteUrl("HomePage")">
                        <span class="glyphicon glyphicon-home"></span>
                    </a>
                </li>
                <li class="crumb-link">
                    <a href="#">商品相关</a>
                </li>
                <li class="crumb-trail">编辑活动</li>
            </ol>
        </div>
        <div class="topbar-right">
            <div class="ml15 ib va-m" id="toggle_sidemenu_r">
                <a href="#" class="pl5">
                    <i class="fa fa-sign-in fs22 text-primary"></i>
                    <span class="badge badge-hero badge-danger">3</span>
                </a>
            </div>
        </div>
    </header>
    <!-- End: Topbar -->
    <!-- Begin: Content -->
    <section id="content" class="formSection">

        <form class="form-horizontal" asp-action="Edit" asp-controller="Campaign" method="Post" id="CampaignForm" novalidate="novalidate">
            @{
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <span class="glyphicon glyphicon-tasks"></span> 编辑活动
                        </div>
                    </div>
                    <div class="panel-body p10 pt10">
                        <div class="tab-block">
                            <ul class="nav nav-tabs tabs-bg">
                                <li class="active">
                                    <a href="#tab10_1" data-toggle="tab" aria-expanded="true"><i class="fa fa-align-justify text-purple"></i> 基本信息</a>
                                </li>
                                <li>
                                    <a href="#tab10_2" data-toggle="tab" aria-expanded="false"><i class="fa fa-th text-purple"></i> 购买商品</a>
                                </li>
                                <li>
                                    <a href="#tab10_3" data-toggle="tab" aria-expanded="false"><i class="fa fa-user text-purple"></i> 赠送商品</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="tab10_1" class="tab-pane active">
                                    @await Html.PartialAsync("_CreateOrUpdate", Model)
                                </div>
                                <div id="tab10_2" class="tab-pane">
                                    @await Html.PartialAsync("_CampaignBuyProducts", Model)
                                </div>
                                <div id="tab10_3" class="tab-pane">
                                    @await Html.PartialAsync("_CampaignGiveProducts", Model)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="form-group mbn">
                            <div class="col-lg-12">
                                <button class="btn btn-primary ladda-button" type="button" id="FormSubmit" value="保存"><i class="fa fa-floppy-o mr5"></i>保存</button>
                                <button class="btn btn-info ladda-button" type="button" id="FormSubmitContinue" name="save-continue" value="保存并继续"><i class="fa fa-clipboard mr5"></i>保存并编辑</button>
                                <a class="btn btn-warning" href="@Url.Action("List")"><i class="fa fa-undo mr5"></i> 返回</a>
                            </div>
                        </div>
                    </div>
                </div>


            }

        </form>

    </section>

    <!-- End: Content -->
</section>

