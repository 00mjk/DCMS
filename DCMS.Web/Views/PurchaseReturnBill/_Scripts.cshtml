			return isVaild;
		}

        //采购退货单项目
        $("#PurchaseReturnItems").bootstrapTable({
               @Html.Raw(Model.Items.Count > 0 ? "url: '/PurchaseReturnBill/AsyncPurchaseReturnItems?purchaseReturnBillId=" + Model.Id+"'," : "length: 9,")
            striped: true,
