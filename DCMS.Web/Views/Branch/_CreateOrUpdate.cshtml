@using DCMS.ViewModel.Models.Users;
@using DCMS.Web.Framework.UI;
@using DCMS.Web.Framework;



@model BranchModel

@Html.HiddenFor(model => model.Id)

<div class="form-group">
    <label asp-for="DeptName" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-lg-8">
        <input asp-for="DeptName" class = "form-control" placeholder = "部门名称..."/>
    </div>
</div>

<div class="form-group">
    <label asp-for="DeptCode" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-lg-8">
        <input asp-for="DeptCode" class = "form-control" placeholder = "机构代码..."/>
    </div>
</div>

<div class="form-group">
    <label asp-for="ParentId" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-lg-8">
        @*@Html.DropDownListFor(model => model.ParentId, Model.ParentList, "请选择"" class = "form-control"/>*@
        <dcms-select asp-for="ParentId" asp-items="@Model.ParentList" asp-default="请选择组织机构" />
    </div>
</div>

<div class="form-group">
    <label asp-for="DeptShort" asp-postfix=":" class="col-lg-3 control-label">
    </label>
    <div class="col-lg-8">
        <input asp-for="DeptShort" class = "form-control" placeholder = "简述..."/>
    </div>
</div>

<div class="form-group">
    <label asp-for="DeptDesc" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-lg-8">
        <input asp-for="DeptDesc" class = "form-control" placeholder = "描述..."/>
    </div>
</div>

<div class="form-group">
    <label asp-for="TreePath" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-lg-8">
        <input asp-for="TreePath" class = "form-control" placeholder = "继承关系..."/>
    </div>
</div>

<div class="form-group">
    <label asp-for="BranchLeader" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-lg-8">
        <input asp-for="BranchLeader" class = "form-control" placeholder = "直属负责人..."/>
    </div>
</div>

<div class="form-group">
    <label asp-for="DisplayOrder" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-lg-8">
        <input asp-for="DisplayOrder" class = "form-control" placeholder = "排序..."/>
    </div>
</div>


<div class="form-group">
    <label asp-for="Status" asp-postfix=":" class="col-lg-3 control-label"/>
    <div class="col-sm-8">
        <label class="checkbox-inline">
            @Html.CheckBoxFor(model => model.Status, new { @class = "mt15" })
        </label>
    </div>
</div>
