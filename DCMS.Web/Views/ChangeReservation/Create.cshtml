    <section id="content" class="formSection">
        <form class="form-horizontal" asp-action="Create" asp-controller="ChangeReservation" method="get" id="ChangeReservationForm" novalidate="novalidate">
            @{

                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <span class="glyphicon glyphicon-tasks"></span> 订单转销售单
                        </div>
                    </div>
                    <div class="panel-body p10 pt10">

                        <div class="tab-block">
                            <ul class="nav nav-tabs tabs-bg" id="ReceiptCashFormTab">
                                <li class="active">
                                    <a href="#tab10_1" data-toggle="tab" data-id="0" aria-expanded="true"><i class="fa fa-align-justify text-purple"></i> 单据信息</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="tab10_1" class="tab-pane active">
                                    @await Html.PartialAsync("_CreateOrUpdate", Model)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="form-group mbn">
                            <div class="col-lg-12">
                                <button id="FormSubmit" type="button" class="btn btn-primary ladda-button" data-style="zoom-out" value="保存"><i class="fa fa-floppy-o mr5"></i>保存</button>
                                <a class="btn btn-warning" href="@Context.Request.Query["returnURL"]"><i class="fa fa-undo mr5"></i> 返回</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </form>
    </section>

    <!-- End: Content -->
</section>

