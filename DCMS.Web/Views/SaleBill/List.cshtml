            //	var r = window.location.search.substr(1).match(reg);
            //	if (r != null) {
            //		return unescape(r[2]);
            //	}
            //	return null;
            //}
            //getUrlQueryString((int)AccessGranularityEnum.SaleReservationPrint)

            //全选
            $("input[name='btSelectAll']").click(function () {
                var selectStatus = $(this).is(':checked')
                if (selectStatus) {
                    $("input[name='btSelectItem']").each(function (i, n) {
                        n.checked = true;
                    });
                } else {
                    $("input[name='btSelectItem']").each(function (i, n) {
                        n.checked = false;
                    });
                }
            });

            //高级搜索
            $("#panel0 #AdvancedSearch").click(function () {
                var ico = $(this).find(".fa");
                if (ico.hasClass('fa-angle-double-right'))
                    ico.removeClass("fa-angle-double-right").addClass("fa-angle-double-down");
                else
                    ico.removeClass("fa-angle-double-down").addClass("fa-angle-double-right");
                $("#panel0").find(".panel-body").toggleClass("hidden fadeIn");
            });

            $(document).on('click', "#btn_search_customer", function () {
                var actionUrl = "/Terminal/AsyncSearchSelectPopup";
                $(this).showModalV2($("#TerminalSelectModalWindow"), actionUrl, { ids: "" }, "选择终端", $("#TerminalSelectForm"), function (rows) { });
            });

            window.operateEventsPopTerminal = {
                'click .rowSelect': function (e, value, row, index) {
                    try {
                        $("#TerminalId").val(row.Id);
                        $("#TerminalName").val(row.Name);
                        $('#TerminalSelectModalWindow').modal('hide');
                    }
                    catch (err) {
                        console.log(err);
                        $(this).showToastr(err);
                        return;
                    }
                }
            };


            //导出选择
            $("#export_select").click(function () {
                Export(1);
            });
            //导出全部
            $("#export_all").click(function () {
                Export(2);
            });
            var Export = function (t) {
                var queryParams = {};
                queryParams.type = t;
                queryParams.selectData = "";
                if (t == 1) {
                    var selectData = "";
                    //获取用户选择的单据
                    var arrselections = $("input[name='btSelectItem']:checked").each(function (i, j) {//把所有被选中的复选框的值存入数组
                        selectData += (selectData != "" ? "," : "") + $(this).val();
                    });

                    if (selectData == "") {
                        $(this).showToastr("没有选择数据");
                        return false;
                    }
                    queryParams.selectData = selectData;

                }
                BindQueryParams(queryParams);
                window.location.href = "/SaleBill/Export?type=" + queryParams.type + "&selectData=" + queryParams.selectData + "&terminalId=" + queryParams.TerminalId + "&businessUserId=" + queryParams.BusinessUserId + "&billNumber=" + queryParams.BillNumber + "&wareHouseId=" + queryParams.WareHouseId + "&paymentMethodType=" + queryParams.PaymentMethodType + "&remark=" + queryParams.Remark + "&startTime=" + queryParams.StartTime + "&endTime=" + queryParams.EndTime + "&districtId=" + queryParams.DistrictId + "&deliveryUserId=" + queryParams.DeliveryUserId + "&auditedStatus=" + queryParams.AuditedStatus + "&sortByAuditedTime=" + queryParams.SortByAuditedTime + "&showReverse=" + queryParams.ShowReverse + "&showReturn=" + queryParams.ShowReturn + "&billSourceType=" + queryParams.BillSourceType + "&terminalName=" + queryParams.TerminalName;

            }

            //打印选择
            $("#print_select").click(function () {
                Print(1);
            });
            //打印全部
            $("#print_all").click(function () {
                Print(2);
            });



            var Print = function (t) {
                var loadingButton = Ladda.create($("#btn_print")[0]);
                var queryParams = {};
                queryParams.type = t;
                //queryParams.billType = 12;
                //queryParams.billIds = "";
                queryParams.selectData = "";
                if (t == 1) {
                    var selectData = "";
                    //获取用户选择的单据
                    var arrselections = $("input[name='btSelectItem']:checked").each(function (i, j) {//把所有被选中的复选框的值存入数组
                        selectData += (selectData != "" ? "," : "") + $(this).val();
                    });

                    if (selectData == "") {
                        $(this).showToastr("没有选择数据");
                        return false;
                    }
                    queryParams.selectData = selectData;

                }
                BindQueryParams(queryParams);
                WinMsg.confirm({ message: "打印单据吗？" }).on(function (e) {
                    if (!e) {
                        return;
                    }
                    loadingButton.start();
                    var setting = {}
                    var LODOP = null;
                    var rs = $(this).getSyncData("/SaleBill/PrintSetting", null, "get");
                    if (rs.Success) {
                        setting = rs.Data;
                        console.info(setting);
                        loadCLodop(document, setting.PrintPort, function () {
                            //判断页面是否已加载LODOP
                            if (LODOP == null || LODOP == undefined) {
                                LODOP = getLodopFirst(document);
                                LODOP = getLodopSecond(document);
                            }
                            if (LODOP == null || LODOP == undefined) {
                                loadingButton.stop();
                                return;
                            } else {
                                $("#printData").html("");
                            }
                            $(this).remoteRequest('GET', '/SaleBill/Print', queryParams, function (result) {
                                if (result.Success) {
                                    var htmls = result.Data;
                                    LODOP.PRINT_INIT("销售单");
                                    if (!isNaN(setting.PaperWidth) && !isNaN(setting.PaperHeight)) {
                                        LODOP.SET_PRINT_PAGESIZE(1, setting.PaperWidth + "mm", setting.PaperHeight + "mm");
                                    }
                                    //订单变量模拟后台配置
                                    var headerHeight = setting.HeaderHeight;
                                    var footerHeight = setting.FooterHeight - setting.MarginBottom;
                                    var bodyBeginSite = headerHeight + 1 + setting.MarginTop;
                                    var bodyHeight = (setting.PageRowsCount + 3) * 5.8;
                                    var footerBeginSite = bodyHeight + bodyBeginSite;
                                    var linkedItem = 0;
                                    //打印分页
                                    if (setting.IsPrintPageNumber) {
                                        LODOP.ADD_PRINT_HTM(1, 600, 300, 100, "总页号：<font color='#0000ff' format='ChineseNum'><span tdata='pageNO'>第##页</span>/<span tdata='pageCount'>共##页</span></font>");
                                        linkedItem += 1;
                                    }
                                    htmls.forEach(function (html, index) {
                                        //获取样式
                                        var reg = /<\s*(\S+)(\s[^>]*)?>[\s\S]*<\s*\/\1\s*>/
                                        var result = reg.exec(html);
                                        var strStyle = "";
                                        if (result.length > 0) { 
                                            strStyle = reg.exec(html)[0];
                                        }
                                        //获取html内容
                                        var elements = $(html);
                                        //打印页体
                                        if (!isNaN(setting.MarginTop) && !isNaN(setting.MarginLeft) && !isNaN(setting.MarginRight) && !isNaN(setting.MarginBottom)) {
                                            if (setting.PrintInAllPages) {
                                                LODOP.ADD_PRINT_TABLE(bodyBeginSite + "mm", 10, "100%", bodyHeight + "mm", html);
                                                LODOP.SET_PRINT_STYLEA(0, "TableHeightScope", 1);
                                                linkedItem += 1;
                                            } else {
                                                LODOP.ADD_PRINT_HTM(setting.MarginTop + "mm", setting.MarginLeft + "mm", "RightMargin:" + setting.MarginRight + "mm", "BottomMargin:" + setting.MarginBottom + "mm", html);
                                            }
                                        }
                                        if (setting.PrintInAllPages) {
                                            //打印页眉
                                            var header = $('.header', elements);
                                            LODOP.ADD_PRINT_HTM(setting.MarginTop + "mm", 30, "95%", headerHeight + "mm", strStyle + header.html());
                                            LODOP.SET_PRINT_STYLEA(0, "ItemType", 1);
                                            //打印页脚
                                            var footer = $('.footer', elements);
                                            LODOP.ADD_PRINT_HTM(footerBeginSite + "mm", 30, "95%", footerHeight+"mm", strStyle + footer.html());
                                            LODOP.SET_PRINT_STYLEA(0, "LinkedItem", linkedItem);
                                            //LODOP.SET_PRINT_STYLEA(0, "PageIndex", "Last");
                                            LODOP.SET_PRINT_STYLEA(0, "ItemType", 1);
                                        }
                                        //LODOP.ADD_PRINT_HTM("70mm", "160mm", "150mm", "5mm", "<font>111111111111111111111</font>");
                                        //LODOP.SET_PRINT_STYLEA(0, "PageIndex", "Last");
