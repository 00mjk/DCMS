@using DCMS.ViewModel.Models.Users;
@using DCMS.Web.Framework.UI;
@using DCMS.Web.Framework;

@model UserModel

<input asp-for="Id" type="hidden" />

<div class="form-group">
    <label asp-for="Password" asp-postfix=":" class="col-lg-2 control-label" />
    <div class="col-lg-5">
        <input type="password" asp-for="Password" class="form-control" placeholder="密码..." />
    </div>
    <div class="col-lg-4" id="msg">
        @Html.DCMSValidationMessageFor(model => model.Password)
    </div>
</div>
    <div class="form-group">
        <div class="col-lg-2"></div>
        <div class="col-lg-9">
            <p class="text-info"><span>密码设置为字母+数字+特殊字符组合，长度8-16</span><i class="bi bi-exclamation-triangle"></i></p>
        </div>
    </div>

