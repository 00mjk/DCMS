				'click .rowSelect': function (e, value, row, index) {
					try {
						$("#TerminalId").val(row.Id);
						$("#TerminalName").val(row.Name);
						$('#TerminalSelectModalWindow').modal('hide');
					}
					catch (err) {
						console.log(err);
						$(this).showToastr(err);
						return;
					}
				}
